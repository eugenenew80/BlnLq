		<createTable tableName="dict_participant_roles_tl" schemaName="apps" remarks="Справочник роли участников - перевод">
			<column name="code" type="varchar2(30)" remarks="Код роли">
				<constraints nullable="false"/>
			</column>

			<column name="lang" type="varchar(10)" remarks="язык">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(200)" remarks="Наименование роли">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="TIMESTAMP" remarks="Дата создания">
