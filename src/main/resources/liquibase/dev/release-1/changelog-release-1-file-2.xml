<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<changeSet id="lq-con-1" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>add column to dm_doc_signer_role</comment>
		<addColumn schemaName="apps"
				   tableName="dm_doc_signer_role">
			<column name="activity_code" type="varchar2(30)" remarks="Код действия"/>
		</addColumn>
	</changeSet>

	<changeSet id="lq-con-2" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>Creating table: dict_requests_category</comment>
		<createTable tableName="dict_requests_category" schemaName="apps" remarks="Справочник категорий заявок">
			<column name="code" type="varchar2(30)" remarks="Код категорий">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="TIMESTAMP" remarks="Дата создания">
				<constraints nullable="true"/>
			</column>

			<column name="last_update_date" type="TIMESTAMP" remarks="Дата изменения">
				<constraints nullable="true"/>
			</column>

			<column name="create_by" type="number" remarks="Автор">
				<constraints nullable="true"/>
			</column>

			<column name="last_update_by" type="number" remarks="Автор изменения">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="lq-con-3" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>Creating primary key for table: dict_requests_category</comment>
		<addPrimaryKey
				columnNames="code"
				constraintName="pk_dict_requests_category"
				schemaName="apps"
				tableName="dict_requests_category"/>
	</changeSet>

	<changeSet id="lq-con-4" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>Creating table: dict_requests_category</comment>
		<createTable tableName="dict_requests_category_tl" schemaName="apps" remarks="Справочник категорий заявок - перевод">
			<column name="code" type="varchar2(30)" remarks="Код прввила">
				<constraints nullable="false"/>
			</column>

			<column name="lang" type="varchar(10)" remarks="язык">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(200)" remarks="Наименование категорий">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="TIMESTAMP" remarks="Дата создания">
				<constraints nullable="true"/>
			</column>

			<column name="last_update_date" type="TIMESTAMP" remarks="Дата изменения">
				<constraints nullable="true"/>
			</column>

			<column name="create_by" type="number" remarks="Автор">
				<constraints nullable="true"/>
			</column>

			<column name="last_update_by" type="number" remarks="Автор изменения">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="lq-con-5" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>Creating primary key for table: dict_requests_category_tl</comment>
		<addPrimaryKey
				columnNames="code, lang"
				constraintName="pk_dict_requests_category_tl"
				schemaName="apps"
				tableName="dict_requests_category_tl"/>
	</changeSet>

	<changeSet id="lq-con-6" logicalFilePath="path-independent" author="conor" context="dev">
		<comment>Creating foreign constraint: dict_requests_category_tl to dict_requests_category</comment>
		<addForeignKeyConstraint
				baseTableSchemaName="apps"
				baseTableName="dict_requests_category_tl"
				baseColumnNames="code"
				constraintName="fk_dict_requests_category_tl_1"
				deferrable="true"
				onDelete="CASCADE"
				onUpdate="RESTRICT"
				referencedTableSchemaName="apps"
				referencedTableName="dict_requests_category"
				referencedColumnNames="code"
		/>
	</changeSet>

	<changeSet id="lq-con-7" logicalFilePath="path-independent" author="conor" context="dev">
